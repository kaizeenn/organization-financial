<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - Organization Financial</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/stylesheets/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
  <div class="min-h-screen flex">
    <!-- Sidebar -->
    <%- include('../partials/sidebar', { user: user, active: 'income' }) %>

    <!-- Main Content -->
    <main class="flex-1 md:ml-64">
      <!-- Top Navigation -->
      <nav class="bg-white border-b border-gray-200 px-4 py-3 md:px-6">
        <div class="flex items-center justify-between">
          <button id="sidebarToggle" class="md:hidden text-gray-600">
            <i class="bi bi-list text-2xl"></i>
          </button>
          <h1 class="text-xl font-semibold text-gray-800">Pemasukan Lainnya</h1>
          <div class="w-8 h-8 bg-brand-500 rounded-full flex items-center justify-center text-white font-medium">
            <%= user.nama.charAt(0).toUpperCase() %>
          </div>
        </div>
      </nav>

      <!-- Page Content -->
      <div class="p-4 md:p-6">
        <!-- Header with Action Button -->
        <div class="flex items-center justify-between mb-6">
          <div>
            <h2 class="text-2xl font-bold text-gray-900">Pemasukan dari Sumber Lainnya</h2>
            <p class="text-gray-600 mt-1">Kelola pemasukan dari sponsor, donasi, dan sumber lainnya</p>
          </div>
          <button class="btn-primary flex items-center gap-2" onclick="toggleForm()">
            <i class="bi bi-plus-circle"></i> Tambah Pemasukan
          </button>
        </div>

        <!-- Create Form (Hidden by default) -->
        <div id="createForm" class="bg-white rounded-lg shadow p-6 mb-6 hidden">
          <h3 class="text-lg font-semibold mb-4">Tambah Pemasukan Baru</h3>
          <form id="incomeForm" onsubmit="submitIncome(event)" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="nama_sumber" class="block text-sm font-medium text-gray-700 mb-2">Sumber Pemasukan</label>
                <input type="text" id="nama_sumber" name="nama_sumber" class="input" placeholder="Sponsor, Donasi, Hadiah, dll" required>
              </div>
              <div>
                <label for="jumlah" class="block text-sm font-medium text-gray-700 mb-2">Jumlah (Rp)</label>
                <input type="number" id="jumlah" name="jumlah" class="input" placeholder="0" required>
              </div>
            </div>
            <div>
              <label for="kas_account_id" class="block text-sm font-medium text-gray-700 mb-2">Masuk ke Kas</label>
              <select id="kas_account_id" name="kas_account_id" class="input" required>
                <option value="">-- Pilih akun kas --</option>
              </select>
            </div>
            <div>
              <label for="deskripsi" class="block text-sm font-medium text-gray-700 mb-2">Deskripsi (Opsional)</label>
              <textarea id="deskripsi" name="deskripsi" class="input" rows="3" placeholder="Penjelasan sumber pemasukan..."></textarea>
            </div>
            <div class="flex gap-3">
              <button type="submit" class="btn-primary" id="submitBtn">Simpan</button>
              <button type="button" class="btn bg-gray-200 text-gray-700 hover:bg-gray-300" onclick="toggleForm()">Batal</button>
            </div>
          </form>
        </div>

        <!-- Success Message -->
        <% if (typeof success !== 'undefined' && success) { %>
          <div class="mb-4 p-4 bg-green-50 border border-green-200 text-green-700 rounded-lg">
            <i class="bi bi-check-circle"></i> Pemasukan berhasil ditambahkan
          </div>
        <% } %>

        <!-- Income Table -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tanggal</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Sumber Pemasukan</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Deskripsi</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Kas Tujuan</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Jumlah</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Aksi</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (income.length === 0) { %>
                <tr>
                  <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                    <i class="bi bi-inbox text-4xl mb-2"></i>
                    <p>Belum ada pemasukan dari sumber lainnya</p>
                  </td>
                </tr>
              <% } else { %>
                <% income.forEach(inc => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-sm text-gray-900">
                      <%= formatDate(inc.created_at) %>
                    </td>
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">
                      <%= inc.nama_sumber %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= inc.deskripsi || '-' %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= inc.kas_nama || '-' %>
                    </td>
                    <td class="px-6 py-4 text-sm text-right font-semibold text-success-600">
                      +<%= formatRupiah(inc.jumlah) %>
                    </td>
                    <td class="px-6 py-4 text-center">
                      <button onclick="deleteIncome(<%= inc.id %>)" class="text-danger-500 hover:text-danger-600 font-medium text-sm">
                        Hapus
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <script>
    // Sidebar toggle
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.querySelector('.sidebar');
    
    if (sidebarToggle && sidebar) {
      sidebarToggle.addEventListener('click', () => {
        sidebar.classList.toggle('active');
      });
      
      document.addEventListener('click', (e) => {
        if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
          sidebar.classList.remove('active');
        }
      });
    }

    // Toggle form
    function toggleForm() {
      const form = document.getElementById('createForm');
      form.classList.toggle('hidden');
    }

    // Load kas accounts
    async function loadKasAccounts() {
      try {
        const response = await fetch('/api/kas-accounts');
        const data = await response.json();
        const select = document.getElementById('kas_account_id');
        
        data.forEach(kas => {
          const option = document.createElement('option');
          option.value = kas.id;
          option.textContent = `${kas.nama_akun} (${kas.saldo.toLocaleString('id-ID')})`;
          select.appendChild(option);
        });
      } catch (error) {
        console.error('Error loading kas accounts:', error);
      }
    }

    // Submit form
    async function submitIncome(e) {
      e.preventDefault();
      const btn = document.getElementById('submitBtn');
      btn.disabled = true;
      btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Menyimpan...';

      const formData = new FormData(document.getElementById('incomeForm'));
      const data = {
        nama_sumber: formData.get('nama_sumber'),
        jumlah: parseInt(formData.get('jumlah')),
        kas_account_id: parseInt(formData.get('kas_account_id')),
        deskripsi: formData.get('deskripsi')
      };

      try {
        const response = await fetch('/income', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
          alert('Pemasukan berhasil ditambahkan!');
          location.reload();
        } else {
          alert('Error: ' + result.message);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Terjadi kesalahan. Silakan coba lagi.');
      } finally {
        btn.disabled = false;
        btn.innerHTML = 'Simpan';
      }
    }

    // Delete income
    async function deleteIncome(id) {
      if (confirm('Yakin ingin menghapus pemasukan ini?')) {
        try {
          const response = await fetch(`/income/${id}`, {
            method: 'DELETE'
          });

          const result = await response.json();

          if (result.success) {
            alert('Pemasukan berhasil dihapus!');
            location.reload();
          } else {
            alert('Error: ' + result.message);
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Terjadi kesalahan. Silakan coba lagi.');
        }
      }
    }

    // Load kas accounts on page load
    document.addEventListener('DOMContentLoaded', loadKasAccounts);
  </script>
</body>
</html>
