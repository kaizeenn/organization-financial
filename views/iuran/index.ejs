<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - Organization Financial</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/stylesheets/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
  <div class="min-h-screen flex">
    <!-- Sidebar -->
    <%- include('../partials/sidebar', { user: user, active: 'iuran' }) %>

    <!-- Main Content -->
    <main class="flex-1 md:ml-64">
      <!-- Top Navigation -->
      <nav class="bg-white border-b border-gray-200 px-4 py-3 md:px-6">
        <div class="flex items-center justify-between">
          <button id="sidebarToggle" class="md:hidden text-gray-600">
            <i class="bi bi-list text-2xl"></i>
          </button>
          <h1 class="text-xl font-semibold text-gray-800">Manajemen Iuran</h1>
          <div class="w-8 h-8 bg-brand-500 rounded-full flex items-center justify-center text-white font-medium">
            <%= user.nama.charAt(0).toUpperCase() %>
          </div>
        </div>
      </nav>

      <!-- Page Content -->
      <div class="p-4 md:p-6">
        <div class="mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Manajemen Pembayaran Iuran</h2>
          <p class="text-gray-600 mt-1">Verifikasi dan kelola pembayaran iuran anggota</p>
        </div>

        <!-- Status Filter -->
        <div class="mb-6 flex gap-2 flex-wrap">
          <a href="/iuran?status=all" class="btn <%= currentStatus === 'all' ? 'btn-primary' : 'bg-white border border-gray-300 text-gray-700 hover:bg-gray-50' %>">
            Semua
          </a>
          <a href="/iuran?status=pending" class="btn <%= currentStatus === 'pending' ? 'btn-primary' : 'bg-white border border-gray-300 text-gray-700 hover:bg-gray-50' %>">
            <i class="bi bi-clock"></i> Pending
          </a>
          <a href="/iuran?status=lunas" class="btn <%= currentStatus === 'lunas' ? 'btn-primary' : 'bg-white border border-gray-300 text-gray-700 hover:bg-gray-50' %>">
            <i class="bi bi-check-circle"></i> Lunas
          </a>
          <a href="/iuran?status=ditolak" class="btn <%= currentStatus === 'ditolak' ? 'btn-primary' : 'bg-white border border-gray-300 text-gray-700 hover:bg-gray-50' %>">
            <i class="bi bi-x-circle"></i> Ditolak
          </a>
        </div>

        <!-- Payments Table -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Anggota</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Jenis Iuran</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Periode</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Jumlah</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Metode</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Status</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Aksi</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (payments.length === 0) { %>
                <tr>
                  <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                    Belum ada pembayaran iuran
                  </td>
                </tr>
              <% } else { %>
                <% payments.forEach(payment => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">
                      <%= payment.anggota_nama %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= payment.nama_iuran %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= payment.periode || '-' %>
                    </td>
                    <td class="px-6 py-4 text-sm text-right font-medium text-gray-900">
                      <%= formatRupiah(payment.jumlah) %>
                    </td>
                    <td class="px-6 py-4 text-sm capitalize text-gray-600">
                      <%= payment.metode %>
                    </td>
                    <td class="px-6 py-4 text-center">
                      <% if (payment.status === 'lunas') { %>
                        <span class="badge badge-success">Lunas</span>
                      <% } else if (payment.status === 'pending') { %>
                        <span class="badge badge-warning">Pending</span>
                      <% } else { %>
                        <span class="badge badge-danger">Ditolak</span>
                      <% } %>
                    </td>
                    <td class="px-6 py-4 text-center">
                      <% if (payment.status === 'pending') { %>
                        <button onclick="openVerifyModal(<%= payment.id %>)" class="text-brand-500 hover:text-brand-600 text-sm font-medium">
                          Verifikasi
                        </button>
                      <% } else { %>
                        <span class="text-gray-400 text-sm">-</span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <!-- Verify Modal -->
  <div id="verifyModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
    <div class="bg-white rounded-lg max-w-md w-full p-6">
      <h3 class="text-lg font-semibold mb-4">Verifikasi Pembayaran</h3>
      <form id="verifyForm" method="POST" class="space-y-4">
        <div>
          <label for="kas_account_id" class="block text-sm font-medium text-gray-700 mb-2">Akun Kas Tujuan</label>
          <select id="kas_account_id" name="kas_account_id" class="input" required>
            <option value="">-- Pilih akun kas --</option>
            <% iuranTypes.forEach(type => { %>
              <!-- Placeholder for kas accounts -->
            <% }) %>
          </select>
        </div>
        <div>
          <label for="status" class="block text-sm font-medium text-gray-700 mb-2">Status Verifikasi</label>
          <select id="status" name="status" class="input" required>
            <option value="lunas">Setujui (Lunas)</option>
            <option value="ditolak">Tolak</option>
          </select>
        </div>
        <div class="flex gap-3 justify-end">
          <button type="button" onclick="closeVerifyModal()" class="btn bg-gray-200 text-gray-700">Batal</button>
          <button type="submit" class="btn-primary">Verifikasi</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.querySelector('.sidebar');
    
    if (sidebarToggle && sidebar) {
      sidebarToggle.addEventListener('click', () => {
        sidebar.classList.toggle('active');
      });
    }

    function openVerifyModal(paymentId) {
      const modal = document.getElementById('verifyModal');
      const form = document.getElementById('verifyForm');
      form.action = `/iuran/${paymentId}/verify`;
      modal.classList.remove('hidden');
    }

    function closeVerifyModal() {
      document.getElementById('verifyModal').classList.add('hidden');
    }
  </script>
</body>
</html>
