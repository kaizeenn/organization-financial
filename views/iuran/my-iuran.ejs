<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - Organization Financial</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/stylesheets/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
  <div class="min-h-screen flex">
    <!-- Sidebar -->
    <%- include('../partials/sidebar', { user: user, active: 'iuran' }) %>

    <!-- Main Content -->
    <main class="flex-1 md:ml-64">
      <!-- Top Navigation -->
      <nav class="bg-white border-b border-gray-200 px-4 py-3 md:px-6">
        <div class="flex items-center justify-between">
          <button id="sidebarToggle" class="md:hidden text-gray-600">
            <i class="bi bi-list text-2xl"></i>
          </button>
          <h1 class="text-xl font-semibold text-gray-800">Iuran Saya</h1>
          <div class="w-8 h-8 bg-brand-500 rounded-full flex items-center justify-center text-white font-medium">
            <%= user.nama.charAt(0).toUpperCase() %>
          </div>
        </div>
      </nav>

      <!-- Page Content -->
      <div class="p-4 md:p-6">
        <div class="mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Riwayat Iuran Saya</h2>
          <p class="text-gray-600 mt-1">Kelola dan monitor pembayaran iuran Anda</p>
        </div>

        <!-- Upload Iuran Section -->
        <div class="bg-white rounded-lg shadow p-6 mb-6">
          <h3 class="text-lg font-semibold mb-4">Upload Bukti Pembayaran Iuran</h3>
          <form action="/iuran/upload" method="POST" enctype="multipart/form-data" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="iuran_type_id" class="block text-sm font-medium text-gray-700 mb-2">Jenis Iuran</label>
                <select id="iuran_type_id" name="iuran_type_id" class="input" required>
                  <option value="">-- Pilih jenis iuran --</option>
                  <% iuranTypes.forEach(type => { %>
                    <option value="<%= type.id %>"><%= type.nama_iuran %> - <%= formatRupiah(type.nominal) %></option>
                  <% }) %>
                </select>
              </div>
              <div>
                <label for="periode" class="block text-sm font-medium text-gray-700 mb-2">Periode</label>
                <input type="month" id="periode" name="periode" class="input" required>
              </div>
              <div>
                <label for="jumlah" class="block text-sm font-medium text-gray-700 mb-2">Jumlah</label>
                <input type="number" id="jumlah" name="jumlah" class="input" placeholder="0" required>
              </div>
              <div>
                <label for="metode" class="block text-sm font-medium text-gray-700 mb-2">Metode Pembayaran</label>
                <select id="metode" name="metode" class="input" required>
                  <option value="">-- Pilih metode --</option>
                  <option value="tunai">Tunai</option>
                  <option value="transfer">Transfer Bank</option>
                  <option value="qris">QRIS</option>
                  <option value="ewallet">E-Wallet</option>
                </select>
              </div>
            </div>
            <div>
              <label for="bukti_pembayaran" class="block text-sm font-medium text-gray-700 mb-2">Upload Bukti (JPG, PNG, PDF - Max 5MB)</label>
              <input type="file" id="bukti_pembayaran" name="bukti_pembayaran" class="input" accept=".jpg,.jpeg,.png,.pdf" required>
            </div>
            <button type="submit" class="btn-primary">Upload Bukti Pembayaran</button>
          </form>
        </div>

        <!-- Iuran History -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold">Riwayat Pembayaran Iuran</h3>
          </div>
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Jenis Iuran</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Periode</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tanggal Upload</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Jumlah</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (iuranStatus.length === 0) { %>
                <tr>
                  <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                    Belum ada riwayat iuran
                  </td>
                </tr>
              <% } else { %>
                <% iuranStatus.forEach(iuran => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">
                      <%= iuran.nama_iuran %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= iuran.periode || '-' %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= formatDate(iuran.created_at) %>
                    </td>
                    <td class="px-6 py-4 text-sm text-right font-medium text-gray-900">
                      <%= formatRupiah(iuran.jumlah) %>
                    </td>
                    <td class="px-6 py-4 text-center">
                      <% if (iuran.status === 'lunas') { %>
                        <span class="badge badge-success">
                          <i class="bi bi-check-circle"></i> Lunas
                        </span>
                      <% } else if (iuran.status === 'pending') { %>
                        <span class="badge badge-warning">
                          <i class="bi bi-clock"></i> Pending
                        </span>
                      <% } else { %>
                        <span class="badge badge-danger">
                          <i class="bi bi-x-circle"></i> Ditolak
                        </span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <script>
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.querySelector('.sidebar');
    
    if (sidebarToggle && sidebar) {
      sidebarToggle.addEventListener('click', () => {
        sidebar.classList.toggle('active');
      });
    }
  </script>
</body>
</html>
