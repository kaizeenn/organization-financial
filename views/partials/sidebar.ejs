<aside class="sidebar fixed left-0 top-0 z-40 w-64 h-screen bg-white border-r border-gray-200 overflow-y-auto">
  <div class="p-6 border-b border-gray-200">
    <h2 class="text-xl font-bold text-brand-500">OrgFinance</h2>
    <p class="text-xs text-gray-500 mt-1">Organization Financial System</p>
  </div>

  <nav class="p-4 space-y-1">
    <!-- Dashboard -->
    <a href="/dashboard" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 <%= active === 'dashboard' ? 'bg-brand-50 text-brand-600' : '' %>">
      <i class="bi bi-speedometer2"></i>
      <span>Dashboard</span>
    </a>

    <% if (user.role === 'super_admin' || user.role === 'bendahara') { %>
      <!-- Kas Management -->
      <a href="/kas" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 <%= active === 'kas' ? 'bg-brand-50 text-brand-600' : '' %>">
        <i class="bi bi-wallet2"></i>
        <span>Kas Organisasi</span>
      </a>

      <!-- Iuran Management -->
      <a href="/iuran" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 <%= active === 'iuran' ? 'bg-brand-50 text-brand-600' : '' %>">
        <i class="bi bi-credit-card"></i>
        <span>Manajemen Iuran</span>
      </a>
    <% } else { %>
      <!-- My Iuran -->
      <a href="/iuran/my" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 <%= active === 'iuran' ? 'bg-brand-50 text-brand-600' : '' %>">
        <i class="bi bi-credit-card"></i>
        <span>Iuran Saya</span>
      </a>
    <% } %>

    <!-- Activities -->
    <a href="/activities" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 <%= active === 'activities' ? 'bg-brand-50 text-brand-600' : '' %>">
      <i class="bi bi-calendar-event"></i>
      <span>Kegiatan & Anggaran</span>
    </a>

    <% if (user.role === 'super_admin' || user.role === 'bendahara') { %>
      <!-- Income from Other Sources -->
      <a href="/income" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 <%= active === 'income' ? 'bg-brand-50 text-brand-600' : '' %>">
        <i class="bi bi-gift"></i>
        <span>Pemasukan Lainnya</span>
      </a>
    <% } %>

    <% if (user.role === 'super_admin' || user.role === 'bendahara' || user.role === 'pengurus') { %>
      <!-- Expenses -->
      <a href="/expenses" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 <%= active === 'expenses' ? 'bg-brand-50 text-brand-600' : '' %>">
        <i class="bi bi-cash-stack"></i>
        <span>Pengeluaran</span>
      </a>
    <% } %>

    <% if (user.role === 'super_admin' || user.role === 'bendahara') { %>
      <!-- Reports -->
      <a href="/reports" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 <%= active === 'reports' ? 'bg-brand-50 text-brand-600' : '' %>">
        <i class="bi bi-file-earmark-bar-graph"></i>
        <span>Laporan Keuangan</span>
      </a>
    <% } %>

    <% if (user.role === 'super_admin') { %>
      <div class="pt-4 mt-4 border-t border-gray-200">
        <p class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase">Admin</p>
        
        <!-- Users -->
        <a href="/users" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 <%= active === 'users' ? 'bg-brand-50 text-brand-600' : '' %>">
          <i class="bi bi-people"></i>
          <span>Manajemen User</span>
        </a>

        <!-- Settings -->
        <a href="/settings" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100 <%= active === 'settings' ? 'bg-brand-50 text-brand-600' : '' %>">
          <i class="bi bi-gear"></i>
          <span>Pengaturan</span>
        </a>
      </div>
    <% } %>

    <!-- Logout -->
    <div class="pt-4 mt-4 border-t border-gray-200">
      <a href="/auth/logout" class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-600 hover:bg-red-50">
        <i class="bi bi-box-arrow-right"></i>
        <span>Logout</span>
      </a>
    </div>
  </nav>

  <!-- User Info at Bottom -->
  <div class="absolute bottom-0 left-0 right-0 p-4 bg-gray-50 border-t border-gray-200">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-brand-500 rounded-full flex items-center justify-center text-white font-medium">
        <%= user.nama.charAt(0).toUpperCase() %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-900 truncate"><%= user.nama %></p>
        <p class="text-xs text-gray-500 capitalize"><%= user.role.replace('_', ' ') %></p>
      </div>
    </div>
  </div>
</aside>
