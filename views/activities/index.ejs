<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - Organization Financial</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/stylesheets/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
  <div class="min-h-screen flex">
    <!-- Sidebar -->
    <%- include('../partials/sidebar', { user: user, active: 'activities' }) %>

    <!-- Main Content -->
    <main class="flex-1 md:ml-64">
      <!-- Top Navigation -->
      <nav class="bg-white border-b border-gray-200 px-4 py-3 md:px-6">
        <div class="flex items-center justify-between">
          <button id="sidebarToggle" class="md:hidden text-gray-600">
            <i class="bi bi-list text-2xl"></i>
          </button>
          <h1 class="text-xl font-semibold text-gray-800">Kegiatan & Anggaran</h1>
          <div class="w-8 h-8 bg-brand-500 rounded-full flex items-center justify-center text-white font-medium">
            <%= user.nama.charAt(0).toUpperCase() %>
          </div>
        </div>
      </nav>

      <!-- Page Content -->
      <div class="p-4 md:p-6">
        <div class="mb-6 flex justify-between items-start">
          <div>
            <h2 class="text-2xl font-bold text-gray-900">Daftar Kegiatan</h2>
            <p class="text-gray-600 mt-1">Lihat anggaran dan realisasi pengeluaran setiap kegiatan</p>
          </div>
          <% if (user.role === 'super_admin' || user.role === 'bendahara') { %>
            <button class="btn-primary flex items-center gap-2" onclick="toggleForm()">
              <i class="bi bi-plus-circle"></i> Buat Kegiatan
            </button>
          <% } %>
        </div>

        <!-- Create Form -->
        <% if (user.role === 'super_admin' || user.role === 'bendahara') { %>
          <div id="createForm" class="bg-white rounded-lg shadow p-6 mb-6 hidden">
            <h3 class="text-lg font-semibold mb-4">Buat Kegiatan Baru</h3>
            <form action="/activities" method="POST" class="space-y-4">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label for="nama_kegiatan" class="block text-sm font-medium text-gray-700 mb-2">Nama Kegiatan</label>
                  <input type="text" id="nama_kegiatan" name="nama_kegiatan" class="input" required>
                </div>
                <div>
                  <label for="divisi" class="block text-sm font-medium text-gray-700 mb-2">Divisi</label>
                  <input type="text" id="divisi" name="divisi" class="input" placeholder="Opsional">
                </div>
                <div>
                  <label for="anggaran" class="block text-sm font-medium text-gray-700 mb-2">Anggaran (Rp)</label>
                  <input type="number" id="anggaran" name="anggaran" class="input" placeholder="0" required>
                </div>
                <div>
                  <label for="status" class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                  <select id="status" name="status" class="input" required>
                    <option value="perencanaan">Perencanaan</option>
                    <option value="berjalan">Berjalan</option>
                    <option value="selesai">Selesai</option>
                  </select>
                </div>
              </div>
              <div class="flex gap-3">
                <button type="submit" class="btn-primary">Simpan</button>
                <button type="button" class="btn bg-gray-200 text-gray-700 hover:bg-gray-300" onclick="toggleForm()">Batal</button>
              </div>
            </form>
          </div>
        <% } %>

        <!-- Activities Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% if (activities.length === 0) { %>
            <div class="col-span-full text-center py-12 bg-white rounded-lg">
              <i class="bi bi-calendar-x text-5xl text-gray-300 mb-4"></i>
              <p class="text-gray-500">Belum ada kegiatan</p>
            </div>
          <% } else { %>
            <% activities.forEach(activity => { %>
              <div class="bg-white rounded-lg shadow hover:shadow-lg transition p-6">
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <h3 class="font-semibold text-gray-900"><%= activity.nama_kegiatan %></h3>
                    <% if (activity.divisi) { %>
                      <p class="text-xs text-gray-500 mt-1"><%= activity.divisi %></p>
                    <% } %>
                  </div>
                  <span class="badge <%= activity.status === 'berjalan' ? 'badge-warning' : activity.status === 'selesai' ? 'badge-success' : 'badge-primary' %> capitalize">
                    <%= activity.status %>
                  </span>
                </div>

                <div class="space-y-3 mb-4">
                  <div>
                    <div class="flex justify-between text-sm mb-1">
                      <span class="text-gray-600">Anggaran</span>
                      <span class="font-semibold text-gray-900"><%= formatRupiah(activity.anggaran) %></span>
                    </div>
                  </div>
                  <div>
                    <div class="flex justify-between text-sm mb-1">
                      <span class="text-gray-600">Realisasi</span>
                      <span class="font-semibold text-gray-900"><%= formatRupiah(activity.realisasi) %></span>
                    </div>
                  </div>
                  <div>
                    <div class="flex justify-between text-sm mb-1">
                      <span class="text-gray-600">Sisa</span>
                      <span class="font-semibold <%= activity.sisa_anggaran < 0 ? 'text-danger-600' : 'text-success-600' %>">
                        <%= formatRupiah(activity.sisa_anggaran) %>
                      </span>
                    </div>
                  </div>
                </div>

                <div class="mb-4">
                  <div class="flex justify-between text-xs text-gray-600 mb-1">
                    <span>Progress</span>
                    <span><%= Math.round((activity.realisasi / activity.anggaran) * 100) %>%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div 
                      class="<%= Math.round((activity.realisasi / activity.anggaran) * 100) > 100 ? 'bg-danger-500' : 'bg-success-500' %> h-2 rounded-full" 
                      style="width: <%= Math.min((activity.realisasi / activity.anggaran) * 100, 100) %>%"
                    ></div>
                  </div>
                </div>

                <a href="/activities/<%= activity.id %>" class="text-brand-500 hover:text-brand-600 text-sm font-medium">
                  Lihat Detail <i class="bi bi-arrow-right"></i>
                </a>
              </div>
            <% }) %>
          <% } %>
        </div>
      </div>
    </main>
  </div>

  <script>
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.querySelector('.sidebar');
    
    if (sidebarToggle && sidebar) {
      sidebarToggle.addEventListener('click', () => {
        sidebar.classList.toggle('active');
      });
    }

    function toggleForm() {
      const form = document.getElementById('createForm');
      if (form) {
        form.classList.toggle('hidden');
      }
    }
  </script>
</body>
</html>
