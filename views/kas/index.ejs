<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - Organization Financial</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/stylesheets/tailwind.css" rel="stylesheet">
  <style>
    .sidebar {
      transition: transform 0.3s ease;
    }
    
    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
      }
      .sidebar.active {
        transform: translateX(0);
      }
    }
  </style>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen flex">
    <!-- Sidebar -->
    <%- include('../partials/sidebar', { user: user, active: 'kas' }) %>

    <!-- Main Content -->
    <main class="flex-1 md:ml-64">
      <!-- Top Navigation -->
      <nav class="bg-white border-b border-gray-200 px-4 py-3 md:px-6">
        <div class="flex items-center justify-between">
          <button id="sidebarToggle" class="md:hidden text-gray-600">
            <i class="bi bi-list text-2xl"></i>
          </button>
          <h1 class="text-xl font-semibold text-gray-800">Manajemen Kas</h1>
          <div class="flex items-center gap-3">
            <span class="text-sm text-gray-600 hidden sm:inline"><%= user.nama %></span>
            <div class="w-8 h-8 bg-brand-500 rounded-full flex items-center justify-center text-white font-medium">
              <%= user.nama.charAt(0).toUpperCase() %>
            </div>
          </div>
        </div>
      </nav>

      <!-- Page Content -->
      <div class="p-4 md:p-6">
        <!-- Header with Action Button -->
        <div class="flex items-center justify-between mb-6">
          <div>
            <h2 class="text-2xl font-bold text-gray-900">Akun Kas Organisasi</h2>
            <p class="text-gray-600 mt-1">Total Saldo: <strong><%= formatRupiah(totalSaldo) %></strong></p>
          </div>
          <button class="btn-primary flex items-center gap-2" onclick="toggleForm()">
            <i class="bi bi-plus-circle"></i> Buat Akun Kas
          </button>
        </div>

        <!-- Success Message -->
        <% if (typeof success !== 'undefined' && success) { %>
          <div class="mb-4 p-4 bg-green-50 border border-green-200 text-green-700 rounded-lg">
            <i class="bi bi-check-circle"></i> Akun kas berhasil dibuat
          </div>
        <% } %>

        <!-- Create Form (Hidden by default) -->
        <div id="createForm" class="bg-white rounded-lg shadow p-6 mb-6 hidden">
          <h3 class="text-lg font-semibold mb-4">Buat Akun Kas Baru</h3>
          <form action="/kas" method="POST" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="nama_akun" class="block text-sm font-medium text-gray-700 mb-2">Nama Akun</label>
                <input type="text" id="nama_akun" name="nama_akun" class="input" placeholder="Kas Tunai Organisasi" required>
              </div>
              <div>
                <label for="tipe" class="block text-sm font-medium text-gray-700 mb-2">Tipe Kas</label>
                <select id="tipe" name="tipe" class="input" required>
                  <option value="">Pilih tipe</option>
                  <option value="tunai">Tunai</option>
                  <option value="bank">Bank</option>
                  <option value="ewallet">E-Wallet</option>
                </select>
              </div>
              <div>
                <label for="saldo_awal" class="block text-sm font-medium text-gray-700 mb-2">Saldo Awal</label>
                <input type="number" id="saldo_awal" name="saldo_awal" class="input" placeholder="0" value="0">
              </div>
              <div>
                <label for="penanggung_jawab" class="block text-sm font-medium text-gray-700 mb-2">Penanggung Jawab (Opsional)</label>
                <select id="penanggung_jawab" name="penanggung_jawab" class="input">
                  <option value="">-- Pilih penanggung jawab --</option>
                </select>
              </div>
            </div>
            <div class="flex gap-3">
              <button type="submit" class="btn-primary">Simpan</button>
              <button type="button" class="btn bg-gray-200 text-gray-700 hover:bg-gray-300" onclick="toggleForm()">Batal</button>
            </div>
          </form>
        </div>

        <!-- Kas Accounts Table -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nama Akun</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tipe</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Penanggung Jawab</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Saldo</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Aksi</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (kasAccounts.length === 0) { %>
                <tr>
                  <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                    <i class="bi bi-inbox text-4xl mb-2"></i>
                    <p>Belum ada akun kas</p>
                  </td>
                </tr>
              <% } else { %>
                <% kasAccounts.forEach(kas => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">
                      <%= kas.nama_akun %>
                    </td>
                    <td class="px-6 py-4 text-sm">
                      <span class="badge badge-primary capitalize">
                        <i class="bi bi-<%= kas.tipe === 'tunai' ? 'wallet' : kas.tipe === 'bank' ? 'building' : 'credit-card' %>"></i>
                        <%= kas.tipe %>
                      </span>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= kas.penanggung_jawab_nama || '-' %>
                    </td>
                    <td class="px-6 py-4 text-sm text-right font-semibold text-gray-900">
                      <%= formatRupiah(kas.saldo) %>
                    </td>
                    <td class="px-6 py-4 text-center">
                      <a href="/kas/<%= kas.id %>/transactions" class="text-brand-500 hover:text-brand-600 font-medium text-sm">
                        Lihat Transaksi
                      </a>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <script>
    // Sidebar toggle
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.querySelector('.sidebar');
    
    if (sidebarToggle && sidebar) {
      sidebarToggle.addEventListener('click', () => {
        sidebar.classList.toggle('active');
      });
      
      document.addEventListener('click', (e) => {
        if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
          sidebar.classList.remove('active');
        }
      });
    }

    // Toggle create form
    function toggleForm() {
      const form = document.getElementById('createForm');
      form.classList.toggle('hidden');
    }
  </script>
</body>
</html>
