<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - Organization Financial</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/stylesheets/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
  <div class="min-h-screen flex">
    <!-- Sidebar -->
    <%- include('../partials/sidebar', { user: user, active: 'expenses' }) %>

    <!-- Main Content -->
    <main class="flex-1 md:ml-64">
      <!-- Top Navigation -->
      <nav class="bg-white border-b border-gray-200 px-4 py-3 md:px-6">
        <div class="flex items-center justify-between">
          <button id="sidebarToggle" class="md:hidden text-gray-600">
            <i class="bi bi-list text-2xl"></i>
          </button>
          <h1 class="text-xl font-semibold text-gray-800">Manajemen Pengeluaran</h1>
          <div class="w-8 h-8 bg-brand-500 rounded-full flex items-center justify-center text-white font-medium">
            <%= user.nama.charAt(0).toUpperCase() %>
          </div>
        </div>
      </nav>

      <!-- Page Content -->
      <div class="p-4 md:p-6">
        <div class="mb-6 flex justify-between items-start">
          <div>
            <h2 class="text-2xl font-bold text-gray-900">Daftar Pengeluaran</h2>
            <p class="text-gray-600 mt-1">Kelola pengeluaran dan persetujuan</p>
          </div>
          <% if (user.role === 'super_admin' || user.role === 'bendahara' || user.role === 'pengurus') { %>
            <button class="btn-primary flex items-center gap-2" onclick="toggleForm()">
              <i class="bi bi-plus-circle"></i> Buat Pengeluaran
            </button>
          <% } %>
        </div>

        <!-- Status Filter -->
        <div class="mb-6 flex gap-2 flex-wrap">
          <a href="/expenses?status=all" class="btn <%= currentStatus === 'all' ? 'btn-primary' : 'bg-white border border-gray-300 text-gray-700 hover:bg-gray-50' %>">
            Semua
          </a>
          <a href="/expenses?status=pending" class="btn <%= currentStatus === 'pending' ? 'btn-primary' : 'bg-white border border-gray-300 text-gray-700 hover:bg-gray-50' %>">
            <i class="bi bi-clock"></i> Pending
          </a>
          <a href="/expenses?status=disetujui" class="btn <%= currentStatus === 'disetujui' ? 'btn-primary' : 'bg-white border border-gray-300 text-gray-700 hover:bg-gray-50' %>">
            <i class="bi bi-check-circle"></i> Disetujui
          </a>
          <a href="/expenses?status=ditolak" class="btn <%= currentStatus === 'ditolak' ? 'btn-primary' : 'bg-white border border-gray-300 text-gray-700 hover:bg-gray-50' %>">
            <i class="bi bi-x-circle"></i> Ditolak
          </a>
        </div>

        <!-- Create Form -->
        <% if (user.role === 'super_admin' || user.role === 'bendahara' || user.role === 'pengurus') { %>
          <div id="createForm" class="bg-white rounded-lg shadow p-6 mb-6 hidden">
            <h3 class="text-lg font-semibold mb-4">Buat Pengeluaran Baru</h3>
            <form action="/expenses" method="POST" class="space-y-4">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label for="kegiatan_id" class="block text-sm font-medium text-gray-700 mb-2">Kegiatan</label>
                  <select id="kegiatan_id" name="kegiatan_id" class="input" required>
                    <option value="">-- Pilih kegiatan --</option>
                    <% activities.forEach(activity => { %>
                      <option value="<%= activity.id %>"><%= activity.nama_kegiatan %></option>
                    <% }) %>
                  </select>
                </div>
                <div>
                  <label for="kategori_id" class="block text-sm font-medium text-gray-700 mb-2">Kategori</label>
                  <select id="kategori_id" name="kategori_id" class="input" required>
                    <option value="">-- Pilih kategori --</option>
                    <% categories.forEach(cat => { %>
                      <option value="<%= cat.id %>"><%= cat.nama_kategori %></option>
                    <% }) %>
                  </select>
                </div>
                <div>
                  <label for="jumlah" class="block text-sm font-medium text-gray-700 mb-2">Jumlah (Rp)</label>
                  <input type="number" id="jumlah" name="jumlah" class="input" placeholder="0" required>
                </div>
                <div>
                  <label for="kas_account_id" class="block text-sm font-medium text-gray-700 mb-2">Sumber Kas</label>
                  <select id="kas_account_id" name="kas_account_id" class="input" required>
                    <option value="">-- Pilih kas --</option>
                    <% kasAccounts.forEach(kas => { %>
                      <option value="<%= kas.id %>"><%= kas.nama_akun %> (<%= formatRupiah(kas.saldo) %>)</option>
                    <% }) %>
                  </select>
                </div>
              </div>
              <div>
                <label for="keterangan" class="block text-sm font-medium text-gray-700 mb-2">Keterangan</label>
                <textarea id="keterangan" name="keterangan" class="input" rows="3" placeholder="Deskripsi pengeluaran..."></textarea>
              </div>
              <div class="flex gap-3">
                <button type="submit" class="btn-primary">Simpan</button>
                <button type="button" class="btn bg-gray-200 text-gray-700 hover:bg-gray-300" onclick="toggleForm()">Batal</button>
              </div>
            </form>
          </div>
        <% } %>

        <!-- Expenses Table -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tanggal</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Kegiatan</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Kategori</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Dibuat Oleh</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Jumlah</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Status</th>
                <% if (user.role === 'super_admin' || user.role === 'bendahara') { %>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Aksi</th>
                <% } %>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (expenses.length === 0) { %>
                <tr>
                  <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                    Belum ada pengeluaran
                  </td>
                </tr>
              <% } else { %>
                <% expenses.forEach(expense => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-sm text-gray-900">
                      <%= formatDate(expense.created_at) %>
                    </td>
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">
                      <%= expense.nama_kegiatan %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= expense.nama_kategori %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <%= expense.dibuat_oleh %>
                    </td>
                    <td class="px-6 py-4 text-sm text-right font-semibold text-gray-900">
                      <%= formatRupiah(expense.jumlah) %>
                    </td>
                    <td class="px-6 py-4 text-center">
                      <% if (expense.status === 'disetujui') { %>
                        <span class="badge badge-success">Disetujui</span>
                      <% } else if (expense.status === 'pending') { %>
                        <span class="badge badge-warning">Pending</span>
                      <% } else { %>
                        <span class="badge badge-danger">Ditolak</span>
                      <% } %>
                    </td>
                    <% if (user.role === 'super_admin' || user.role === 'bendahara') { %>
                      <td class="px-6 py-4 text-center">
                        <% if (expense.status === 'pending') { %>
                          <button onclick="openApprovalModal(<%= expense.id %>)" class="text-brand-500 hover:text-brand-600 text-sm font-medium">
                            Verifikasi
                          </button>
                        <% } else { %>
                          <span class="text-gray-400 text-sm">-</span>
                        <% } %>
                      </td>
                    <% } %>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <!-- Approval Modal -->
  <div id="approvalModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
    <div class="bg-white rounded-lg max-w-md w-full p-6">
      <h3 class="text-lg font-semibold mb-4">Verifikasi Pengeluaran</h3>
      <form id="approvalForm" method="POST" class="space-y-4">
        <div>
          <label for="approval_status" class="block text-sm font-medium text-gray-700 mb-2">Status Verifikasi</label>
          <select id="approval_status" name="status" class="input" required>
            <option value="disetujui">Setujui</option>
            <option value="ditolak">Tolak</option>
          </select>
        </div>
        <div>
          <label for="catatan" class="block text-sm font-medium text-gray-700 mb-2">Catatan (Opsional)</label>
          <textarea id="catatan" name="catatan" class="input" rows="3"></textarea>
        </div>
        <div class="flex gap-3 justify-end">
          <button type="button" onclick="closeApprovalModal()" class="btn bg-gray-200 text-gray-700">Batal</button>
          <button type="submit" class="btn-primary">Verifikasi</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.querySelector('.sidebar');
    
    if (sidebarToggle && sidebar) {
      sidebarToggle.addEventListener('click', () => {
        sidebar.classList.toggle('active');
      });
    }

    function toggleForm() {
      const form = document.getElementById('createForm');
      if (form) {
        form.classList.toggle('hidden');
      }
    }

    function openApprovalModal(expenseId) {
      const modal = document.getElementById('approvalModal');
      const form = document.getElementById('approvalForm');
      form.action = `/expenses/${expenseId}/approve`;
      modal.classList.remove('hidden');
    }

    function closeApprovalModal() {
      document.getElementById('approvalModal').classList.add('hidden');
    }
  </script>
</body>
</html>
