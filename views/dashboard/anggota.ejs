<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - Organization Financial</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/stylesheets/tailwind.css" rel="stylesheet">
  <style>
    .sidebar {
      transition: transform 0.3s ease;
    }
    
    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
      }
      .sidebar.active {
        transform: translateX(0);
      }
    }
  </style>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen flex">
    <!-- Sidebar -->
    <%- include('../partials/sidebar', { user: user, active: 'dashboard' }) %>

    <!-- Main Content -->
    <main class="flex-1 md:ml-64">
      <!-- Top Navigation -->
      <nav class="bg-white border-b border-gray-200 px-4 py-3 md:px-6">
        <div class="flex items-center justify-between">
          <button id="sidebarToggle" class="md:hidden text-gray-600">
            <i class="bi bi-list text-2xl"></i>
          </button>
          <h1 class="text-xl font-semibold text-gray-800"><%= title %></h1>
          <div class="flex items-center gap-3">
            <span class="text-sm text-gray-600 hidden sm:inline"><%= user.nama %></span>
            <div class="w-8 h-8 bg-brand-500 rounded-full flex items-center justify-center text-white font-medium">
              <%= user.nama.charAt(0).toUpperCase() %>
            </div>
          </div>
        </div>
      </nav>

      <!-- Page Content -->
      <div class="p-4 md:p-6">
        <!-- Welcome Message -->
        <div class="bg-gradient-to-r from-brand-500 to-brand-400 rounded-lg shadow-lg p-6 mb-6 text-white">
          <h2 class="text-2xl font-bold mb-2">Selamat Datang, <%= user.nama %>!</h2>
          <p class="opacity-90">Berikut adalah ringkasan status iuran dan kegiatan organisasi Anda.</p>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
          <!-- Total Lunas -->
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-600">Total Iuran Lunas</p>
                <h3 class="text-2xl font-bold text-success-600 mt-2">
                  <%= formatRupiah(totalIuran.lunas) %>
                </h3>
              </div>
              <div class="w-12 h-12 bg-success-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-check-circle text-2xl text-success-600"></i>
              </div>
            </div>
          </div>

          <!-- Total Pending -->
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-600">Total Iuran Pending</p>
                <h3 class="text-2xl font-bold text-warning-600 mt-2">
                  <%= formatRupiah(totalIuran.pending) %>
                </h3>
              </div>
              <div class="w-12 h-12 bg-warning-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-clock-history text-2xl text-warning-600"></i>
              </div>
            </div>
          </div>
        </div>

        <!-- Iuran Status -->
        <div class="bg-white rounded-lg shadow mb-6">
          <div class="p-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-900">Riwayat Iuran Saya</h3>
            <a href="/iuran/my" class="text-sm text-brand-500 hover:text-brand-600 font-medium">
              Upload Bukti Baru <i class="bi bi-upload"></i>
            </a>
          </div>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Jenis Iuran</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Periode</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tanggal Upload</th>
                  <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Jumlah</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Status</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% if (iuranStatus.length === 0) { %>
                  <tr>
                    <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                      <i class="bi bi-inbox text-4xl mb-2"></i>
                      <p>Belum ada riwayat iuran</p>
                    </td>
                  </tr>
                <% } else { %>
                  <% iuranStatus.forEach(iuran => { %>
                    <tr class="hover:bg-gray-50">
                      <td class="px-6 py-4 text-sm font-medium text-gray-900">
                        <%= iuran.nama_iuran %>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-600">
                        <%= iuran.periode || '-' %>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-600">
                        <%= formatDate(iuran.created_at) %>
                      </td>
                      <td class="px-6 py-4 text-sm text-right font-medium text-gray-900">
                        <%= formatRupiah(iuran.jumlah) %>
                      </td>
                      <td class="px-6 py-4 text-center">
                        <% if (iuran.status === 'lunas') { %>
                          <span class="badge badge-success">
                            <i class="bi bi-check-circle"></i> Lunas
                          </span>
                        <% } else if (iuran.status === 'pending') { %>
                          <span class="badge badge-warning">
                            <i class="bi bi-clock"></i> Pending
                          </span>
                        <% } else { %>
                          <span class="badge badge-danger">
                            <i class="bi bi-x-circle"></i> Ditolak
                          </span>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Kegiatan Aktif -->
        <div class="bg-white rounded-lg shadow">
          <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Kegiatan yang Sedang Berjalan</h3>
          </div>
          <div class="p-6">
            <% if (activities.length === 0) { %>
              <div class="text-center py-8 text-gray-500">
                <i class="bi bi-calendar-x text-4xl mb-2"></i>
                <p>Tidak ada kegiatan yang sedang berjalan</p>
              </div>
            <% } else { %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% activities.forEach(activity => { %>
                  <div class="border border-gray-200 rounded-lg p-4 hover:border-brand-500 transition">
                    <h4 class="font-semibold text-gray-900 mb-2"><%= activity.nama_kegiatan %></h4>
                    <div class="space-y-1 text-sm text-gray-600">
                      <% if (activity.divisi) { %>
                        <p><i class="bi bi-building"></i> <%= activity.divisi %></p>
                      <% } %>
                      <p><i class="bi bi-wallet2"></i> Anggaran: <%= formatRupiah(activity.anggaran) %></p>
                      <p><i class="bi bi-cash"></i> Realisasi: <%= formatRupiah(activity.realisasi) %></p>
                    </div>
                    <div class="mt-3">
                      <div class="flex justify-between text-xs text-gray-600 mb-1">
                        <span>Progress</span>
                        <span><%= Math.round((activity.realisasi / activity.anggaran) * 100) %>%</span>
                      </div>
                      <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-brand-500 h-2 rounded-full" style="width: <%= Math.min((activity.realisasi / activity.anggaran) * 100, 100) %>%"></div>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } %>
            <a href="/activities" class="block mt-4 text-center text-sm text-brand-500 hover:text-brand-600 font-medium">
              Lihat Semua Kegiatan <i class="bi bi-arrow-right"></i>
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    // Sidebar toggle for mobile
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.querySelector('.sidebar');
    
    if (sidebarToggle && sidebar) {
      sidebarToggle.addEventListener('click', () => {
        sidebar.classList.toggle('active');
      });
      
      document.addEventListener('click', (e) => {
        if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
          sidebar.classList.remove('active');
        }
      });
    }
  </script>
</body>
</html>
